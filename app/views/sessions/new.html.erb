<div class="container-sm">

   <%= text_field_tag 'search', '', data: {'js-search' => true} %>

    <% if alert %>  
        <div class="alert alert-primary" role="alert">
            <p id="alert"><%= alert %></p>
        </div>
    <% end %>


    <h1>Login</h1>

    <%= form_tag sessions_path do |form| %>

    <div class="form-group">
        <%= label_tag :email %>        
         <%= text_field_tag :email, "", class: 'form-control'%>
        <small id="emailHelp" class="form-text text-muted">Informe o e-mail</small>
    </div>

    <div class="form-group">
        <%= label_tag :password %>        
         <%= password_field_tag :password, "", class: 'form-control'%>
        <small id="emailHelp" class="form-text text-muted">Informe a senha</small>
    </div>


    <div class="actions">
        <%= submit_tag "Login" , class: 'btn btn-primary' %>
    </div>
    <% end %>

</div>