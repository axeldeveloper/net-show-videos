<div class="container">  
		<div class="card">
            <div class="card-header">
				<i class="fa fa-fw fa-edit"></i> 
				<strong> Login </strong>          	
			</div>
			
			<div class="card-body">
				<div class="col-sm-8">
					
					<%= form_tag sessions_path do |form| %>		
                        <div class="form-group">
                            <%= label_tag :email,  nil, class: 'col-form-label col-form-label-lg' %>        
                            <%= text_field_tag :email, "", class: 'form-control'%>
                            <small id="emailHelp" class="form-text text-muted">Informe o e-mail</small>
                        </div>

                        <div class="form-group">
                            <%= label_tag :password, nil, class: 'col-form-label col-form-label-lg' %>      
                            <%= password_field_tag :password, "", class: 'form-control'%>
                            <small id="emailHelp" class="form-text text-muted">Informe a senha</small>
                        </div>
	
						<div class="form-group">
							
							<button type="submit" name="submit" value="submit" id="submit" class="btn btn-purple">
								<i class="fa fa-fw fa-edit"></i> Gravar
							</button>

	
							<%= link_to videos_path , class:'btn btn-danger btn-sm"'  do %>
								<i class="fa fa-fw fa-minus-circle"> </i> Voltar
							<% end %>
	
						</div>
	
					<% end %> 
	
				</div>
			</div>
	
		</div>	  
</div>  