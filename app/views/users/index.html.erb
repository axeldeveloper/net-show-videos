<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-fw fa-globe"></i>
            <strong>  Lists  </strong>
            <%= link_to new_user_path, class:'float-right btn btn-purple btn-sm'  do %>
            <i class="fa fa-fw fa-plus-circle"> </i> 
                New
            <% end %>
        </div>

        <div class="card-body">
            <div class="col-sm-12">
                 <%= form_tag videos_path, :method => 'get' do %>
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Nome</label>
                                <%= text_field_tag :store, params[:store] , class: 'form-control' , placeholder: "Informe o nome" %>
                            </div>
                        </div>                   
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div>
                                    <button type="submit" name="submit" value="search" id="submit"
                                        class="btn btn-purple">
                                        <i class="fa fa-fw fa-search"></i> Buscar
                                    </button>
                                    <%= link_to videos_path , class:'btn btn-danger btn-sm"'  do %>
                                        <i class="fa fa-fw fa-minus-circle"> </i> Limpar
                                    <% end %>
                                </div>
                            </div>
                        </div>

                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <hr>

    <div class="table-responsive">

        <table id="produts" class="table table-striped table-bordered">
            <thead>
                <tr class="bg-purple text-white">
                    <th>Name</th>
                    <th>Email</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    
                    <td align="center">
                    
                    
                        <%= link_to   user_path(user), class: "btn btn-purple"  do %>
                                <i class="fa fa-fw fa-eye"> </i>
                        <% end %>

                         <%= link_to   edit_user_path(user), class: "btn btn-purple"  do %>
                        <i class="fa fa-fw fa-edit"> </i>
                        <% end %>  

                        <button type="button" 
                                id="btnModalDelete"
                                class="btn btn-danger" 
                                data-toggle="modal" 
                                data-target="#exampleModal<%= user.id %>">
                            <i class="fa fa-fw fa-trash"> </i>
                        </button> 
                        
                       
                        
                        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                                  <div class="modal fade" id="exampleModal<%= user.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">                   
                                            <div class="modal-header">
                                                <h5 class="modal-title">Delete this thing?</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>

                                                <div class="modal-body">
                                                    <p><%= user.name %></p>
                                                </div>
                                                <div class="modal-footer">
                                                    <%= link_to video_path(user.id), method: :delete, class: "btn btn-danger"  do %>
                                                    <i class="fa fa-fw fa-trash"> </i>
                                                    <% end %>
                                                    <a href="#" data-dismiss="modal" class="btn btn-purple">
                                                    <i class="fa fa-fw fa-close"> </i>
                                                    </a>
                                                </div>
                                            </div>   
                                        </div>
                                    </div>
                                </div>
                    
                    
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>        