<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-info" >
      <h2>
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= form.label :name, class:"col-form-label col-form-label-lg" %> 
      <%= form.text_field :name, class: 'form-control form-control-lg'%>
      <small id="emailHelp" class="form-text text-muted">Enter name</small>
  </div>

 <div class="form-group">
    <%= form.label :email, class:"col-form-label col-form-label-lg" %> 
    <%= form.text_field :email, class: 'form-control form-control-lg'%>
    <small id="emailHelp" class="form-text text-muted">Enter email</small>
  </div>

 <div class="form-group">
    <%= form.label :password, class:"col-form-label col-form-label-lg" %> 
    <%= form.password_field :password, class: 'form-control form-control-lg'%>
    <small id="emailHelp" class="form-text text-muted">Enter password</small>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation , class:"col-form-label col-form-label-lg" %> 
    <%= form.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    <small id="emailHelp" class="form-text text-muted">confirm password</small>
  </div>

  <div class="form-group">
    <%= form.submit "Create user", class:"btn btn-purple"  do %>
          <i class="fa fa-fw fa-plus"> </i>
    <% end %>
     
    <%= link_to users_path , class:'btn btn-danger'  do %>
          <i class="fa fa-fw fa-minus-circle"> </i> Back
    <% end %>
  </div>
<% end %>
