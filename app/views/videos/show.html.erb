<div class="container"> 
	<div class="card">
        <div class="card-header">
            <i class="fa fa-fw fa-edit"></i> 
            <strong>Incluir registros</strong>          
            <%= link_to videos_path , class:'float-right btn btn-purple btn-sm'  do %>
                <i class="fa fa-fw fa-globe"> </i> Buscar registros
            <% end %>
        </div>
			
        <div class="col-md-12"> 
            <hr> 
            <% unless notice.nil? %>
			<div class="alert alert-info" >
                <button type="button" class="close" data-dismiss="alert">&times;</button>     
                <p id="notice"><%= notice %></p>
            </div>
			<% end %>  			
        </div> 
		
			<div class="card-body">
				<div class="col-sm-8">
	
					<h5 class="card-title">
						Campos com são  <span class="text-danger">*</span> obrigatórios!
					</h5>
					  
	
						<div class="form-group">
							<label class="col-form-label col-form-label-lg"> Nome </label>
							<%= label_tag @video.nome  %>  
						</div>
	
						<div class="form-group">
							<label class="col-form-label col-form-label-lg"> URL </label>
                            <%= label_tag @video.url  %>						
						</div>
		
						<div class="form-group">
							
							<%= link_to videos_path , class:'btn btn-danger btn-sm"'  do %>
								<i class="fa fa-fw fa-minus-circle"> </i> Voltar
							<% end %>
	
						</div>
				</div>
			</div>
	
		</div>	  
</div>  

